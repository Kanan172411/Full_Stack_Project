@model List<Room>
@{
    int count = Model.Count;
    int order = 1;
}

@foreach (var item in Model)
{
    if (order == count)
    {
        <li style="display:flex; height:50px; justify-content:space-around; background:gainsboro; align-items:center">
            <div style="display:flex; align-items:center" class="search-image-name">
                <a style="text-decoration:none" asp-action="details" asp-controller="room" asp-route-id="@item.Id">
                    <img style="width:60px; border-radius:8px" src="assets/img/@item.RoomImages[0].ImageName" alt="">
                </a>
                <a style="text-decoration:none" asp-action="details" asp-controller="room" asp-route-id="@item.Id">
                    <p style="margin-top:7px; margin-left:10px">@item.Name</p>
                </a>
            </div>
            <p style="margin-top:7px; margin-left:10px">Price: @item.Price $</p>
            <input id='hiddenid' type="hidden" value="@item.Id">
        </li>
    }
    else
    {
        <li style="border-bottom: 0.5px solid #8b8b8b; display: flex; height: 50px; justify-content: space-around; background: gainsboro; align-items: center">
            <div style="display:flex; align-items:center" class="search-image-name">
                <a style="text-decoration:none" asp-action="details" asp-controller="room" asp-route-id="@item.Id">
                    <img style="width:60px; border-radius:8px" src="assets/img/@item.RoomImages[0].ImageName" alt="">
                </a>
                <a style="text-decoration:none" asp-action="details" asp-controller="room" asp-route-id="@item.Id">
                    <p style="margin-top:7px; margin-left:10px">@item.Name</p>
                </a>
            </div>
            <p style="margin-top:7px; margin-left:10px">Price: @item.Price $</p>
            <input id='hiddenid' type="hidden" value="@item.Id">
        </li>
    }
    order++;
}