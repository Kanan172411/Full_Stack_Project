@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
    int order = (ViewBag.SelectedPage - 1) * 6 + 1;
}

<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">Blogs</h4>
                        <a asp-action="create" class="btn btn-info waves-effect waves-light">Add new</a>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Tables</a></li>
                                <li class="breadcrumb-item active">Blogs Table</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-editable table-nowrap align-middle table-edits">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Name</th>
                                            <th>Category</th>
                                            <th>Description</th>
                                            <th>Post Title</th>
                                            <th>Views</th>
                                            <th>Comments</th>
                                            <th style="width:0%">Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@order</td>
                                                @if (item.Name.Length > 20)
                                                {
                                                    <td data-field="Description" data-bs-toggle="tooltip" data-bs-placement="bottom" title="@item.Name">@item.Name.Substring(0, 30)...</td>
                                                }
                                                else
                                                {
                                                    <td data-field="Description" data-bs-toggle="tooltip" data-bs-placement="bottom" title="@item.Name">@item.Name</td>

                                                }
                                                <td data-field="Category">@item.BlogCategory.Name</td>
                                                @if (item.Desc1.Length > 30)
                                                {
                                                    <td data-field="Description" data-bs-toggle="tooltip" data-bs-placement="bottom" title="@item.Desc1">@item.Desc1.Substring(0, 30)...</td>
                                                }
                                                else
                                                {
                                                    <td data-field="Description" data-bs-toggle="tooltip" data-bs-placement="bottom" title="@item.Desc1">@item.Desc1</td>

                                                }
                                                <td data-field="Post Title">@item.BlogPostTitle</td>
                                                <td data-field="Views">@item.ViewsCount</td>
                                                <td>
                                                    <a asp-action="Comment" asp-route-id="@item.Id" class="btn btn-light waves-effect" title="Comments">
                                                        <i class="fas fa-comments">
                                                            <span class="badge rounded-pill bg-dark">@item.Comments.Count()</span>
                                                        </i>
                                                    </a>
                                                </td>
                                                <td style="width: 100px">
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light waves-effect edit" title="Edit">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-light waves-effect item-delete" asp-action="delete" asp-route-id="@item.Id" title="Delete">
                                                        <i class="ri-delete-bin-line"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            order++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->
            @if (ViewBag.TotalPage > 1)
            {
                <div class="d-inline-block ">
                    <ul class="pagination pagination-rounded mb-0">
                        <li class="page-item @(ViewBag.SelectedPage==1 ? "disabled":"")">
                            <a class="page-link" asp-action="index" asp-controller="Blog" asp-route-page="@(ViewBag.SelectedPage==1 ? 1:ViewBag.SelectedPage-1)">
                                <i class="mdi mdi-chevron-left"></i>
                            </a>
                        </li>
                        @for (int i = 1; i <= ViewBag.TotalPage; i++)
                        {
                            <li class="page-item @(i==ViewBag.SelectedPage?"active":"")"><a class="page-link" asp-action="index" asp-controller="Blog" asp-route-page="@i">@i</a></li>
                        }
                        <li class="page-item @(ViewBag.SelectedPage==ViewBag.TotalPage ? "disabled" : "")">
                            <a class="page-link" asp-action="index" asp-controller="Blog" asp-route-page="@(ViewBag.SelectedPage==ViewBag.TotalPage ? ViewBag.TotalPage:ViewBag.SelectedPage+1)">
                                <i class="mdi mdi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            }

        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->
</div>
@section Scripts
{
    <script>

            $(document).ready(function () {
                $(document).on("click", ".item-delete", function (e) {
                    e.preventDefault();
                    Swal.fire({
                        title: 'Are you sure?',
                        text: "You won't be able to revert this!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, delete it!'
                    }).then((result) => {
                        if (result.isConfirmed) {

                            var url = $(this).attr("href");

                            fetch(url)
                                .then(response => response.json())
                                .then(data => {
                                    if (data.status == 200) {
                                        window.location="Blog"
                                    }
                                    else {
                                        Swal.fire(
                                            'Not found!',
                                            'test',
                                            'error'
                                        )
                                    }
                                });


                        }
                    })
                })
            })


    </script>
}

