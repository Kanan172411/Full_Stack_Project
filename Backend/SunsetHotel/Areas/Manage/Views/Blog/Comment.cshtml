@model List<BlogComment>
@{
    ViewData["Title"] = "Comment";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
    int order = (ViewBag.SelectedPage - 1) * 8 + 1;
}

<div class="main-content">
    <input type="hidden" id="forBlogId" value="@ViewBag.Id"/>
    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">Blog Comments</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Tables</a></li>
                                <li class="breadcrumb-item active">Blog Comments Table</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-editable table-nowrap align-middle table-edits">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>UserName</th>
                                            <th>Email</th>
                                            <th>Comment</th>
                                            <th>Created Time</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@order</td>
                                                <td data-field="Name">@item.Name</td>
                                                <td data-field="Category">@item.Email</td>
                                                @if (item.Text.Length > 40)
                                                {
                                                    <td data-field="Description" data-bs-toggle="tooltip" data-bs-placement="bottom" title="@item.Text">@item.Text.Substring(0, 40)...</td>
                                                }
                                                else
                                                {
                                                    <td data-field="Description" data-bs-toggle="tooltip" data-bs-placement="bottom" title="@item.Text">@item.Text</td>

                                                }
                                                <td data-field="Post Title">@item.CreatedAt.ToString("MM-dd-yyyy")</td>
                                                <td>
                                                    <a class="btn btn-light waves-effect item-delete" asp-action="DeleteComment" asp-route-id="@item.Id" title="Delete">
                                                        <i class="ri-delete-bin-line"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            order++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->
            @if (ViewBag.TotalPage > 1)
            {
                <div class="d-inline-block ">
                    <ul class="pagination pagination-rounded mb-0">
                        <li class="page-item @(ViewBag.SelectedPage==1 ? "disabled":"")">
                            <a class="page-link" asp-action="comment" asp-controller="Blog" asp-route-page="@(ViewBag.SelectedPage==1 ? 1:ViewBag.SelectedPage-1)">
                                <i class="mdi mdi-chevron-left"></i>
                            </a>
                        </li>
                        @for (int i = 1; i <= ViewBag.TotalPage; i++)
                        {
                            <li class="page-item @(i==ViewBag.SelectedPage?"active":"")"><a class="page-link" asp-action="comment" asp-controller="Blog" asp-route-page="@i">@i</a></li>
                        }
                        <li class="page-item @(ViewBag.SelectedPage==ViewBag.TotalPage ? "disabled" : "")">
                            <a class="page-link" asp-action="comment" asp-controller="Blog" asp-route-page="@(ViewBag.SelectedPage==ViewBag.TotalPage ? ViewBag.TotalPage:ViewBag.SelectedPage+1)">
                                <i class="mdi mdi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            }

        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->
</div>
@section Scripts
{
    <script>

        $(document).ready(function () {
            let ID = document.getElementById("forBlogId").value 
                $(document).on("click", ".item-delete", function (e) {
                    e.preventDefault();
                    Swal.fire({
                        title: 'Are you sure?',
                        text: "You won't be able to revert this!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, delete it!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            var url = $(this).attr("href");
                            fetch(url)
                                .then(response => response.json())
                                .then(data => {
                                    if (data.status == 200) {
                                        window.location = `https://localhost:44321/Manage/Blog/Comment/${ID}`
                                    }
                                    else {
                                        Swal.fire(
                                            'Not found!',
                                            'Comment can not be found',
                                            'error'
                                        )
                                    }
                            });


                        }
                    })
                })
            })


    </script>
}
