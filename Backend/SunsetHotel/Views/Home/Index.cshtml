@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!-- Back to top button
================================================== -->
<a id="back-to-top" href="#section__home" class="btn btn-top back-to-top" role="button"
   title="Click to return on the top page" data-toggle="tooltip" data-placement="left">
    <i class="ion-android-arrow-up"></i>
</a>
<!-- CONTENT
  ================================================== -->
<!-- section home -->
<section class="section__home" id="section__home">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="welcome__content">

                    <!-- logo -->
                    <h1 class="welcome_content__title">@Model.setting.LogoPart1</h1>
                    <p class="welcome_content__title-primary">@Model.setting.LogoPart2</p>

                    <div class="divider">
                        <hr class="line1">
                        <hr class="line2">
                        <hr class="line1">
                    </div> <!-- / .divider -->

                    <p class="welcome_content__desc">
                        @Model.setting.WelcomeContent
                    </p>

                    <!-- button -->
                    <a href="#section__about" class="btn btn-reservation">Explore it</a>

                </div> <!-- .welcome__content -->
            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->
    <!-- background image (insert via CSS) -->
    <div class="home__bg"></div>

</section> <!-- / .section__home -->
<!-- section availability -->
<section class="section__availability">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">

                <!-- Reservation form -->
                <form class="reservation__form">
                    <div class="form-group">
                        <div class="form-group__inner">
                            <label for="reservation__check-in">Arrival date</label>
                            <input type="text" class="form-control date" id="reservation__check-in"
                                   value="24 December 2017">
                        </div> <!-- / .form-group__inner -->
                    </div> <!-- / .form-group -->
                    <div class="form-group">
                        <div class="form-group__inner">
                            <label for="reservation__check-out">Departure date</label>
                            <input type="text" class="form-control date" id="reservation__check-out"
                                   value="12 January 2018">
                        </div> <!-- / .form-group__inner -->
                    </div> <!-- / .form-group -->
                    <div class="form-group">
                        <div class="form-group__inner">
                            <label for="reservation__adults">Adults</label>
                            <input type="text" id="reservation__adults">
                            <div class="dropdown reservation-dropdown">
                                <button class="dropdown-toggle" type="button" id="adults-dropdown"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    <span>1 Adult</span>
                                    <i class="icon ion-chevron-down"></i>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="adults-dropdown">
                                    <li><a href="#">1 Adult</a></li>
                                    <li><a href="#">2 Adults</a></li>
                                    <li><a href="#">3 Adults</a></li>
                                </ul>
                            </div> <!-- . -->
                        </div> <!-- / .form-group__inner -->
                    </div> <!-- / .form-group -->
                    <div class="form-group">
                        <div class="form-group__inner">
                            <label for="reservation__children">Children</label>
                            <input type="text" id="reservation__children">
                            <div class="dropdown reservation-dropdown">
                                <button class="dropdown-toggle" type="button" id="children-dropdown"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    <span>1 Child</span>
                                    <i class="icon ion-chevron-down"></i>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="children-dropdown">
                                    <li><a href="#">1 Child</a></li>
                                    <li><a href="#">2 Children</a></li>
                                    <li><a href="#">3 Children</a></li>
                                </ul>
                            </div> <!-- . -->
                        </div> <!-- / .form-group__inner -->
                    </div> <!-- / .form-group -->
                </form> <!-- / .reservation__form -->

            </div>
        </div> <!-- / .row -->
        <div class="row">
            <div class="col-xs-12">

                <!-- Reservation button -->
                <div class="reservation__button">
                    <button type="submit" class="btn btn-reservation">Check availability</button>
                </div> <!-- / .reservation__button -->

            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->
</section> <!-- .section__availability -->
<!-- section about -->
<section class="section__about" id="section__about">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="section__title">Welcome to <strong>Sunset Hotel</strong></h2>
                <div class="divider">
                    <hr class="line1">
                    <hr class="line2">
                    <hr class="line1">
                </div> <!-- / .divider -->
            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->
    <div class="container-fluid">
        <div class="row">
            <div class="section_about__content">
                <div class="col-md-6">
                    <div class="about__pic">
                        <img src="~/assets/img/@Model.setting.AboutBannerImage" class="img-responsive" alt="...">
                    </div> <!-- / .about__pic -->
                </div>
                <div class="col-md-6">
                    <div class="about__desc">
                        <p class="about_desc__subtitle">About us</p>
                        <h3 class="about_desc__title">@Model.setting.AboutTitle</h3>
                        <p class="about_desc__desc">
                            @Model.setting.AboutDesc1
                        </p>
                        <h4 class="about_desc__quote">
                            @Model.setting.AboutDesc2
                        </h4>
                        <a asp-action="about" asp-controller="home" class="btn btn-default">Learn More</a>
                    </div> <!-- / .about__desc -->
                </div>
            </div> <!-- / .section_about__content -->
        </div> <!-- / .row -->
    </div>

</section> <!-- / .section__about -->
<!-- section best-rooms -->
<section class="section__best-rooms">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="section__title">Our <strong>Best rooms</strong></h2>
                <div class="divider">
                    <hr class="line1">
                    <hr class="line2">
                    <hr class="line1">
                </div> <!-- / .divider -->
                <p class="section__subtitle">
                    @Model.setting.OurbestRoomsTitle
                </p>
            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->
    <div class="container">
        <div class="best-rooms__content">
            <div class="row">
                @foreach (var item in Model.rooms1)
                {

                    <div class="col-sm-6">
                        <figure class="best-rooms__item">
                            <img src="~/assets/img/@item.RoomImages[0].ImageName" class="img-responsive" alt="...">
                            <figcaption>
                                <h3>@item.Name</h3>
                                <div class="item__price">
                                    $@item.Price <small>/ night</small>
                                </div>
                                @if (item.Desc.Length > 140)
                                {
                                    <p class="item__desc">
                                        @item.Desc.Substring(0, 140) ...
                                    </p>
                                }
                                else
                                {
                                    <p class="item__desc">
                                        @item.Desc
                                    </p>
                                }
                                <a asp-action="reservation" asp-controller="room" asp-route-id="@item.Id" class="btn-book">
                                    Book now <i class="icon ion-chevron-right"></i><i class="icon ion-chevron-right"></i>
                                </a>
                            </figcaption>
                        </figure> <!-- / .best-rooms__item -->
                    </div>
                }
            </div> <!-- / .row -->
            <div class="row">
                @foreach (var item in Model.rooms2)
                {

                    <div class="col-sm-6">
                        <figure class="best-rooms__item">
                            <img src="~/assets/img/@item.RoomImages[0].ImageName" class="img-responsive" alt="...">
                            <figcaption>
                                <h3>@item.Name</h3>
                                <div class="item__price">
                                    $@item.Price <small>/ night</small>
                                </div>
                                @if (item.Desc.Length > 140)
                                {
                                    <p class="item__desc">
                                        @item.Desc.Substring(0, 140) ...
                                    </p>
                                }
                                else
                                {
                                    <p class="item__desc">
                                        @item.Desc
                                    </p>
                                }
                                <a asp-action="reservation" asp-controller="room" class="btn-book">
                                    Book now <i class="icon ion-chevron-right"></i><i class="icon ion-chevron-right"></i>
                                </a>
                            </figcaption>
                        </figure> <!-- / .best-rooms__item -->
                    </div>
                }
            </div> <!-- / .row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="rooms__button">
                        <a asp-action="index" asp-controller="room" class="btn">See all rooms</a>
                    </div> <!-- / .rooms__button -->
                </div>
            </div> <!-- / .row -->
        </div> <!-- / .best-rooms__content -->
    </div> <!-- / .container -->
</section> <!-- / .section__best-rooms -->
<!-- section services -->
<section class="section__services">
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model.features)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="services__item">
                        <h2 class="services_item__title">@item.Name</h2>
                        <div class="services_item__divider">
                            @for (int i = 0; i < item.StarCount; i++)
                            {
                                <i class="icon ion-android-star"></i>
                            }

                        </div> <!-- .services_item__divider -->
                        <p class="services_item__desc">
                            @item.Desc
                        </p>
                    </div> <!-- .services__item -->
                </div>
            }

        </div> <!-- / .row -->
    </div> <!-- / .container -->
</section> <!-- / .section__services -->
<!-- section gallery -->
<section class="section__gallery">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="section__title">Our <strong>Gallery</strong></h2>
                <div class="divider">
