@model Blog
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">Blog Edit</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Tables</a></li>
                                <li class="breadcrumb-item active">Blog Edit</li>
                            </ol>
                        </div>
                    </div>
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input type="text" asp-for="Name" class="form-control">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Createdat">Created At</label>
                            <input asp-for="Createdat" class="form-control" type="date">
                            <span class="text-danger" asp-validation-for="Createdat"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Desc1">Description Part 1</label>
                            <textarea asp-for="Desc1" class="form-control"></textarea>
                            <span class="text-danger" asp-validation-for="Desc1"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="DescHeader">Desc Header</label>
                            <textarea asp-for="DescHeader" class="form-control"></textarea>
                            <span class="text-danger" asp-validation-for="DescHeader"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Desc2">Description Part 2</label>
                            <textarea asp-for="Desc2" class="form-control"></textarea>
                            <span class="text-danger" asp-validation-for="Desc2"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="BlogPostTitle">Blog Post Title</label>
                            <textarea asp-for="BlogPostTitle" class="form-control"></textarea>
                            <span class="text-danger" asp-validation-for="BlogPostTitle"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="exampleFormControlSelect1">Category</label>
                            <select class="form-control" asp-for="BlogCategoryId" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))">
                            </select>
                            <span class="text-danger" asp-validation-for="BlogCategoryId"></span>
                        </div>

                        <div class="form-group col-md-12">
                            <label for="exampleFormControlSelect1">Tags</label>
                            <select class="form-control" asp-for="TagId" asp-items="@(new SelectList(ViewBag.Tags,"Id","Name"))">
                            </select>
                            <span class="text-danger" asp-validation-for="TagId"></span>
                        </div>
                        <div class="form-group" style="margin: 20px 0px 20px 0px;">
                            @if (Model.ImageName != null)
                            {
                                <div class="col-md-6 col-xl-3" style="width:250px">
                                    <!-- Simple card -->
                                    <div class="card">
                                        <img class="card-img-top img-fluid" src="~/assets/img/@Model.ImageName" alt="Card image cap">
                                    </div>

                                </div><!-- end col -->

                            }
                            <input asp-for="ImageFile" value="" />
                            <span class="text-danger" asp-validation-for="ImageFile"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

