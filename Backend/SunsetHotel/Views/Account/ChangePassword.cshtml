@model ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section__contacts-alt" style="background-image: url(../assets/img/blog_bg.jpg);">
    <div class="container">
        <div class=" row">
            <div style="width: 70%; margin:auto;">
                <div class="section-contacts__form_body">
                    <p class="section-contacts__title">Edit password</p>

                    <!-- Alert message -->
                    <div class="alert" id="form_message" role="alert"></div>

                    <!-- Form -->
                    <form method="post" id="formsendemail" class="contacts__form">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="Password" class="sr-only">Password</label>
                            <input asp-for="Password" type="password" name="password" class="form-control" id="password"
                                   placeholder="Enter your password" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="sr-only">ConfirmPassword</label>
                            <input asp-for="ConfirmPassword" type="password" name="confirmpassword" class="form-control" id="confirmpassword"
                                   placeholder="Repeat password" required>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CurrentPassword" class="sr-only">CurrentPassword</label>
                            <input asp-for="CurrentPassword" type="password" name="CurrentPassword" class="form-control" id="CurrentPassword"
                                   placeholder="Enter your current password" required>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <!-- Submit -->
                        <button type="submit" class="btn btn-default">
                            Save
                        </button>
                    </form> <!-- .contacts__form -->

                </div> <!-- / .section-contacts__form_body -->
            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->
</section> <!-- / .section__contacts-alt -->
